import "Mods\AdvPixy"
import "Mods\AdvGyro"

Sensor.SetMode(2, 0)
AdvGyro.CheckReset(2, result)
While result = 0
  AdvGyro.HardReset(2)
  AdvGyro.CheckReset(2, result)
EndWhile
AdvGyro.ResetPort2(0)

uart = 0
i2c = 0

Sub UArt
  While 1=1
    AdvGyro.WritePort2(gyroAngle)
    uart++
  EndWhile
EndSub

Sub I2C
  I2CReady = 1
  While 1=1
    AdvPixy.getLargest(1, pixyX, pixyY, signature)
    i2c++
  EndWhile
EndSub

Thread.Run = UArt
Thread.Run = I2C

While 1=1 
  LCD.Text(1, 10, 10, 2, uart)
  LCD.Text(1, 10, 40, 2, i2c)
  Program.Delay(1)
  LCD.Clear()
EndWhile